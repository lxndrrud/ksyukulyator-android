<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="70dp"
        android:paddingLeft="15dp"
>
    <TextView
            android:id="@+id/titleView"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:textColor="#00BCD4"
            android:textSize="14sp">
    </TextView>
    <TextView
            android:id="@+id/costView"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:textColor="#00BCD4"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/titleView"
            tools:text="15" android:paddingTop="20dp" android:textAlignment="center">
    </TextView>
    <TextView
            android:id="@+id/categoryTitleView"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:textColor="#673AB7"
            android:layout_below="@id/titleView"
            android:textSize="12sp" android:breakStrategy="high_quality">
    </TextView>
    <CheckBox
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/productCheckbox"
            android:layout_toRightOf="@id/costView"
            android:scaleX="1.5" android:scaleY="1.5"
            android:layout_marginLeft="30dp"
    />

</RelativeLayout>